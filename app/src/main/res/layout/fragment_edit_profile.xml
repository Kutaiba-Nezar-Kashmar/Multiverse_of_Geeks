<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/edit_text_margin">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/new_profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/image_view_dims"
                    android:contentDescription="@string/my_profile_image_disc"
                    android:src="@drawable/avatar_placeholder" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_info_header"
                app:drawableStartCompat="@drawable/person_ic"
                android:layout_marginTop="@dimen/edit_text_margin"/>

        <EditText
                android:id="@+id/new_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autofillHints="name"
                android:hint="@string/f_name"
                android:inputType="text"
                android:minHeight="48dp" />

        <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:layout_marginBottom="@dimen/edit_text_margin" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                app:drawableStartCompat="@drawable/email_ic" />

        <EditText
                android:id="@+id/new_email_field_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="phone"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:minHeight="48dp" />

        <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:layout_marginBottom="@dimen/edit_text_margin" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                app:drawableStartCompat="@drawable/phone_ic" />

        <EditText
                android:id="@+id/new_phone_field_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="phone"
                android:hint="@string/phone_hint"
                android:inputType="phone"
                android:minHeight="48dp" />


        <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:layout_marginBottom="@dimen/edit_text_margin" />

        <Button
                android:id="@+id/save_changes_account_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/save_button"
                android:backgroundTint="@color/green"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/save_ic"/>

        <Button
                android:id="@+id/reset_password_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/reset_button"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/reset_ic"/>

        <Button
                android:id="@+id/delete_account_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete_button"
                android:backgroundTint="@color/red"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/delete_ic"/>

    </LinearLayout>

</ScrollView>