<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.github.kutaiba_nezar_kashmar.multiverse_of_geeks.ui.home.HomeFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/edit_text_margin"
            android:layout_marginEnd="@dimen/edit_text_margin">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@mipmap/my_logo_foreground"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/logo_top"/>

        <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="@string/home_text"
                android:layout_marginTop="@dimen/edit_text_margin"/>

    </LinearLayout>

</ScrollView>