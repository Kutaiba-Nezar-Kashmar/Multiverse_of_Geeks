<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/edit_text_margin"
            android:paddingStart="@dimen/edit_text_margin"
            android:paddingEnd="@dimen/edit_text_margin">

        <TextView
                android:id="@+id/single_free_to_play_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text"
                android:textSize="35sp"
                android:gravity="center"
                android:paddingTop="@dimen/edit_text_margin" />

        <ImageView
                android:id="@+id/single_free_to_play_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/place_holder_pic"
                android:layout_gravity="center"
                android:minHeight="350dp" />

        <RatingBar
                android:id="@+id/free_game_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/release_date"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/free_to_play_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/myapp_ratting"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/edit_text_margin" />

        <TextView
                android:id="@+id/free_to_play_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text"
                android:drawableStart="@drawable/my_rating_ic" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_nav"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/free_to_play_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/game_url"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/free_to_play_game_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text"
                android:autoLink="web"
                android:linksClickable="true" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:text="@string/screen_shots"
                android:textSize="25sp"
                android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/free_to_play_screen_shots_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textSize="25sp"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/free_to_play_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/edit_text_top_margin">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/status"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/game_genre"
                    android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/free_to_play_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_text" />

            <TextView
                    android:id="@+id/free_to_play_genre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_text" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/edit_text_top_margin">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/platform"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/publisher"
                    android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/free_to_play_platform"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_text" />

            <TextView
                    android:id="@+id/free_to_play_publisher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_text" />

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/minimum_system_requirements"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:textSize="25sp"
                android:textStyle="bold" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/os"
                    android:layout_marginTop="@dimen/edit_text_margin"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/free_to_play_os"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_text" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/processor"
                    android:layout_marginTop="@dimen/edit_text_margin"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/free_to_play_processor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_text" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/graphics"
                    android:layout_marginTop="@dimen/edit_text_margin"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/free_to_play_graphics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_text" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/memory"
                    android:layout_marginTop="@dimen/edit_text_margin"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/free_to_play_memory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_text" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/storage"
                    android:layout_marginTop="@dimen/edit_text_margin"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/free_to_play_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_text"
                    android:layout_marginBottom="@dimen/edit_text_margin" />

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/comment_header"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/edit_text_margin" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/free_game_coming_rv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/free_game_coming_rv_id">

                <EditText
                        android:id="@+id/free_game_comment_field"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:importantForAutofill="yes"
                        android:hint="@string/comment"
                        android:minHeight="48dp" />

                <Button
                        android:id="@+id/free_game_post_comment_button"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@drawable/send_ic" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>