<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/edit_text_margin">

        <TextView
                android:id="@+id/single_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text"
                android:textSize="35sp"
                android:gravity="center"/>

        <TextView
                android:id="@+id/single_movie_tagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text"
                android:textSize="25sp"
                android:gravity="center"/>

        <ImageView
                android:id="@+id/single_movie_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/place_holder_pic"
                android:contentDescription="@string/movie_image_desc"
                android:layout_gravity="center"
                android:minHeight="500dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <RatingBar
                    android:id="@+id/movie_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        <Button
                android:id="@+id/movie_fav_button_id"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/fav_border_ic"
                android:layout_marginStart="@dimen/edit_text_top_margin"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/edit_text_margin">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ratting"
                    android:paddingTop="4dp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/single_movie_rating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:drawableStartCompat="@drawable/ratting_ic"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/edit_text_margin">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/myapp_ratting"
                    android:paddingTop="4dp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/single_movie_rating_geek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:drawableStartCompat="@drawable/my_rating_ic"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/edit_text_margin">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/r_year"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/movie_release_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_text" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/edit_text_margin">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/movie_budget"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/movie_budget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_text" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/edit_text_margin">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/movie_revenue"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/movie_revenue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_text" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/edit_text_margin">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/game_genre"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/movie_genre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_page"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/edit_text_margin"/>

        <TextView
                android:id="@+id/movie_home_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text"
                android:autoLink="web"
                android:linksClickable="true" />

        <TextView
                android:id="@+id/movie_collection_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/movie_collection"
                android:textSize="25sp"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/movie_collection_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text"/>

        <ImageView
                android:id="@+id/movie_collection_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mog_log_background"
                android:layout_gravity="center"
                android:minHeight="400dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:text="@string/production_companies"
                android:textSize="25sp"
                android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movie_production_companies_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/to_movie_cast_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cast_button"
                android:drawableEnd="@drawable/arrow_circle_right_ic"
                android:layout_marginTop="@dimen/edit_text_margin"/>

        <Button
                android:id="@+id/to_similar_movie_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to_similar"
                android:drawableEnd="@drawable/arrow_circle_right_ic"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/season_overview"
                android:layout_marginTop="@dimen/edit_text_margin"
                android:textSize="25sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/movie_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/edit_text_margin">


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/movie_coming_rv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            <EditText
                    android:id="@+id/comment_edit_text_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="yes"
                    android:hint="@string/comment"
                    app:layout_constraintTop_toBottomOf="@+id/movie_coming_rv_id"
                    android:minHeight="48dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</ScrollView>
