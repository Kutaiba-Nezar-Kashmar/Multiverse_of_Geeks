<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/edit_text_margin">

        <TextView
                android:id="@+id/sender_name_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_text"
                android:layout_marginEnd="@dimen/edit_text_margin"
                android:layout_marginStart="@dimen/edit_text_margin"/>

        <TextView
                android:id="@+id/comment_timestamp_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/home_text" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commenter_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/avatar_placeholder"
            android:layout_marginStart="@dimen/edit_text_margin" />

    <TextView
            android:id="@+id/comment_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_text"
            android:layout_marginTop="@dimen/edit_text_margin"
            android:layout_marginStart="@dimen/edit_text_margin"
            android:gravity="center"/>
    </LinearLayout>


    <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_margin"/>

</LinearLayout>